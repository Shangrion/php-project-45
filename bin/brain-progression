#!/usr/bin/env php

<?php

#юзаем функцию из Cli и AddLogic
use function BrainGames\AddLogic\check_answer;
use function BrainGames\AddLogic\check_correct;
use function BrainGames\AddLogic\progress_digits_and_answer;
use function BrainGames\Cli\greeting_user;
use function cli\prompt;

#подключение автозагрузки глобал || локал
$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';

if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}

#Приветствие
$name = greeting_user();
echo 'What number is missing in the progression?' . "\n";
#Логика игры
$correctAnswers = 0;
for ($i = 0; $i < 3; $i++) {
    [$digits, $result] = progress_digits_and_answer();
    echo "Question: {$digits}" . "\n";
    $answer = prompt("Your answer");
    $correctAnswers += check_answer($answer, $result);
    if ($correctAnswers === $i) {
        break;
    }
}
check_correct ($correctAnswers, 3, $name);